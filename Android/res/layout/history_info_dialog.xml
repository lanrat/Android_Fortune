<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dialogTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:textSize="@dimen/small_text"
        android:textStyle="italic"
        android:textIsSelectable="false" />
        
    <TextView
        android:id="@+id/dialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textIsSelectable="false" />
    
    <TextView
        android:id="@+id/dialogVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textIsSelectable="false" />
    
    <TextView
        android:id="@+id/dialogUpvotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/upvote_color"
        android:textIsSelectable="false" />
    
    <TextView
        android:id="@+id/dialogDownvotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/downvote_color"
        android:textIsSelectable="false" />
    
        

</LinearLayout>